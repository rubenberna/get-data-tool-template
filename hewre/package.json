{
  "name": "hewre",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --css-modules false --no-compress --format modern,cjs",
    "start-workbench": "npm start --prefix example",
    "start-data-tool": "wait-on microbundle-crl --css-modules false watch --no-compress --format modern,cjs",
    "start": "concurrently -k -s first \"npm run start-data-tool\" \"npm run start-workbench\"",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "publish": "npm publish",
    "predeploy": "cd example &&  install &&  run build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "wait-on": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "concurrently": "^6.2.0",
    "node-sass": "^6.0.0"
  }
}
